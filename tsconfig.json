{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "target": "es2017",
    "paths": {
      "openjoyn/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}